<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  {{#each recipe}}
  {{#each this}}
  {{#if name}}
  <a href="/recipe/{{_id}}" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img src="/uploads/{{this.image}}" alt="{{this.name}}" loading="lazy">
    </div>
    <div class="pt-1">
      {{this.name}} </div>
  </a>
  {{/if}}
  {{/each}}
  {{/each}}

</div>