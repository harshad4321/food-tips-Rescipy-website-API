{{#if recipe}}<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">
            {{#each recipe}}
            {{name}}
            {{/each}}
        </li>
    </ol>
</nav>


<div class="row">

    <div class="col-12 col-md-4">
        {{#each recipe}}
        <img src="{{this.image}}" class="img-fluid sticky-top" style="top: 20px;" alt="{{name}}" loading=" lazy">
        {{/each}}
    </div>

    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12">
                <h1>
                    {{#each recipe}}
                    {{name }}
                    {{/each}}
                </h1>
            </div>
            <div class="col-12 mb-4"><i class="bi bi-tag"></i>

                {{#each recipe}}
                {{category}}
                {{/each}}
            </div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Cooking Instructions</h4>


                {{#each recipe}}
                {{description}}
                {{/each}}

            </div>
        </div>

        <div class="row pt-4">
            <div class="col-12">
                <h4>Ingredients</h4>
                <ul class="list-group list-group-flush">

                    <li class="list-group-item">
                        {{#each recipe}}
                        {{description}}
                        {{/each}}

                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{{else}}
<p>
<h2>No item found.</h2>
</p>
{{/if}}