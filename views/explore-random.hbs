<h1 class="pb-4">Explore Random</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  {{#each recipe}}

  {{#if this}}

  <a href="{{_id}}" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img src="{{this.image}}" alt="{{this.name}}" loading="lazy">
    </div>
    <div class="pt-1">
      {{ this.name }}</div>
  </a>
  {{/if}}

  {{/each}}
</div>